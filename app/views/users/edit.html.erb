<h3>ユーザー編集</h3>
 
<%= form_for @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
 
    <tr>
      <th><%= f.label :startdate ,"開始日" %></th>
      <td><%= f.date_field :startdate %></td>
    </tr>
 
    <tr>
      <th><%= f.label :enddate ,"終了日" %></th>
      <td><%= f.date_field :enddate %></td>
    </tr>
 
    <tr>
      <th><%= f.label :alldate ,"終日" %></th>
       <td><%= f.check_box :alldate %><br>
       終日の場合はチェックを入れます
       </td>
    </tr>
    <tr>
      <th><%= f.label :memo,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>
    <div>
      <ul>
        <li><%= f.submit "編集を完了する" %></li>
        <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
      </ul>
    </div>
<% end %>